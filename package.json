{
  "name": "@asenajs/asena-cli",
  "version": "0.5.0",
  "author": "LibirSoft",
  "license": "MIT",
  "bin": {
    "asena": "./dist/bin/asena.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run clean && tsc",
    "clean": "rm -rf dist",
    "test": "bun test",
    "pre-release": "bun update && bun run build",
    "prepublishOnly": "bun run scripts/sync-version.ts && bun run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "bun run lint && bun run format:check",
    "check:fix": "bun run lint:fix && bun run format"
  },
  "exports": {
    ".": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AsenaJs/Asena-cli"
  },
  "dependencies": {
    "@asenajs/asena": "^0.5.0",
    "@changesets/cli": "^2.29.7",
    "commander": "^12.1.0",
    "inquirer": "^12.10.0",
    "ora": "^8.2.0",
    "reflect-metadata": "^0.2.2",
    "strip-json-comments": "^5.0.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
